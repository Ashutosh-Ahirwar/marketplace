generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  fid           Int           @id
  username      String?
  pfpUrl        String?
  listings      MiniApp[]
  transactions  Transaction[]
  activityLogs  ActivityLog[] // New Relation
  createdAt     DateTime      @default(now())
}

model MiniApp {
  id             String        @id @default(cuid())
  name           String
  description    String
  url            String        @unique
  iconUrl        String
  category       String
  owner          User          @relation(fields: [ownerFid], references: [fid])
  ownerFid       Int
  isVerified     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  
  // Analytics
  clicks         Int           @default(0)
  trendingScore  Float         @default(0)

  // Relations
  featuredSlot   FeaturedSlot?
}

model FeaturedSlot {
  slotIndex Int      @id
  app       MiniApp  @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId     String   @unique
  expiresAt DateTime 
}

model Transaction {
  id          String   @id @default(cuid())
  txHash      String   @unique
  user        User     @relation(fields: [userFid], references: [fid])
  userFid     Int
  type        String   
  amount      String
  description String
  status      String   
  timestamp   DateTime @default(now())
}

// New Model for Non-Financial Actions
model ActivityLog {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userFid], references: [fid])
  userFid     Int
  action      String   // e.g. "DELETE_LISTING"
  details     String   
  timestamp   DateTime @default(now())
}