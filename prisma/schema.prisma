generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  fid           Int           @id
  username      String?
  pfpUrl        String?
  listings      MiniApp[]
  transactions  Transaction[]
  // Removed: views AppView[] 
  createdAt     DateTime      @default(now())
}

model MiniApp {
  id             String        @id @default(cuid())
  name           String
  description    String
  url            String        @unique
  iconUrl        String
  category       String
  owner          User          @relation(fields: [ownerFid], references: [fid])
  ownerFid       Int
  isVerified     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  
  // Analytics (Simple Counters)
  uniqueViews    Int           @default(0) 
  clicks         Int           @default(0)
  trendingScore  Float         @default(0)

  // Relations
  // Removed: views AppView[]
  featuredSlot   FeaturedSlot?
}

// Removed Model: AppView
// model AppView { ... }

model FeaturedSlot {
  slotIndex Int      @id
  app       MiniApp  @relation(fields: [appId], references: [id], onDelete: Cascade)
  appId     String   @unique
  expiresAt DateTime 
}

model Transaction {
  id          String   @id @default(cuid())
  txHash      String   @unique
  user        User     @relation(fields: [userFid], references: [fid])
  userFid     Int
  type        String   
  amount      String
  description String
  status      String   
  timestamp   DateTime @default(now())
}